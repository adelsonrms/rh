@model ERP.Presentation.Api.Models.RegistrarContaViewModel
@{
    ViewBag.Title = "Registrar Usuário";
}

<div class="row">

    <div id="loginbox" class="col-md-6 col-md-5 col-sm-8 col-sm-offset-2">

        <div class="panel panel-info borda">
            <div class="panel-heading" style="border-color: #17375e">
                <div class="panel-title"><strong>Login TECNUN - Timesheet</strong></div>
            </div>
            <div style="padding-top:10px" class="panel-body">
                <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>

                <section id="loginForm">

                    <legend class="laranja">Registrar novo Acesso ao sistema.</legend>

                    @using (Html.BeginForm("Registrar", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @*<div style="padding-top: 15px; font-size: 85%;">
                                Efetuar login informando o e-mail/senha cadastrados no sistema da TECNUN.
                            </div>*@

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        
                        <div style="margin-bottom: 25px" class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", id="txtEmail" })
                        </div>
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })

                        <div style="margin-bottom: 25px" class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                            @Html.PasswordFor(m => m.Senha, new { @class = "form-control", id= "txtSenha" })
                        </div>
                        @Html.ValidationMessageFor(m => m.Senha, "", new { @class = "text-danger" })


                        <div style="margin-bottom: 25px" class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                            @Html.PasswordFor(m => m.ConfirmarSenha, new { @class = "form-control", id = "txtSenha" })
                        </div>
                        @Html.ValidationMessageFor(m => m.ConfirmarSenha, "", new { @class = "text-danger" })


                        <div style="margin-top:10px" class="form-group">
                            <div class="col-sm-12 controls">
                                <input type="submit" value="Entrar" class="btn btn-primary" />
                            </div>
                        </div>
                    }
                </section>
            </div>
        </div>
    </div>
    <div class="col-md-pull-4"></div>
</div>




