@model ERP.Presentation.Api.Models.LoginViewModel
@{
    ViewBag.Title = "Efetuar login";
    Layout = "";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="short cut icon" href="~/Content/Images/favicon.png" type="image/x-icon" />
    <title>TECNUN - ERP v1.0</title>
    
    <script src="~/Content/jquery/jquery-1.12.4.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/globalize.js"></script>
    <script src="~/Scripts/jquery.validate.globalize.js"></script>
    <!-- Bootstrap Core JavaScript -->
    <link href="~/Content/bootstrap/bootstrap.css" rel="stylesheet" />
    <script src="~/Content/bootstrap/bootstrap.js"></script>
    <!-- MetisMenu CSS -->
    @*<link href="~/DashboardLayout/dist/css/sb-admin-2.css" rel="stylesheet">*@
    <!-- Font Awesome  -->
    <link href="~/Content/fonts/font-awesome/v531/cdn/css/fontawesome.min.css" rel="stylesheet" />
    <script src="~/Content/fonts/font-awesome/v531/cdn/js/fontawesome.min.js"></script>

    <link href="~/Content/fonts/font-awesome/v531/cdn/css/all.min.css" rel="stylesheet" />
    <script src="~/Content/fonts/font-awesome/v531/cdn/js/all.min.js"></script>
    @*<link href="~/admin/build/css/custom.css" rel="stylesheet" />*@
    <link href="~/Content/tecnun.css" rel="stylesheet" />
</head>
<body>

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12"></div>
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-lg-3">
                            <img class="pull-left" src="~/Images/logo.png" style="height: 27px">
                        </div>
                    </div>
                </div>
                <div class="panel-body">

                <p class="laranja">
                    Acesse o sistema utilizando sua conta do Office 365.<br/>
                </p>

                <div class="container-fluid">
                        <div class="row">
                            <div>
                                 @using (Html.BeginForm("LoginOffice365", "Account", new { provider = "OpenIdConnect", returnUrl = "/" }, FormMethod.Post, new { @class = "form-horizontal", role = "form", id = "frmOffice365Login" }))
                                {
                                    <a onclick="frmOffice365Login.submit()" href="#"><img class="pull-left" src="~/Images/LoginMS_ContaMS.png"></a>
                                }
                          </div>
                        </div>
                        <div style="padding-top: 15px;padding-bottom: 15px;">
                            Ou...
                        </div>
                </div>

                    <p class="laranja">
                        Informe o login de acesso previamente criado no sistema.<br/>
                        <strong>Obs.</strong> : Somente usuários &#64;tecnun.com.br terão acesso ao sistema.
                    </p>
                    <section id="loginForm">

                        @using (Html.BeginForm("Login", "Account", new {ReturnUrl = ViewBag.ReturnUrl}, FormMethod.Post, new {@class = "form-horizontal", role = "form", id = "frmLogin"}))
                        {
                            <fieldset>
                                <div class="row">
                                    @Html.ValidationSummary(true, "", new {@class = "text-danger"})
                                    <div class="form-horizontal col-lg-12">

                                        <div class="input-group" style="margin-bottom: 15px">
                                            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                            @Html.TextBoxFor(m => m.Email, new {@class = "form-control", id = "txtEmail", placeholder="usuario@tecnun.com.br"})
                                        </div>
                                        @Html.ValidationMessageFor(m => m.Email, "", new {@class = "text-danger"})

                                        <div class="input-group" style="margin-bottom: 15px; display:none">
                                            <span class="input-group-addon"><i>&#64;</i></span>
                                            <button class="btn btn-default" disabled="disabled" style="width: 100%;text-align: left;">tecnun.com.br</button>
                                        </div>

                                        <div class="input-group" style="margin-bottom: 15px">
                                            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                                            @Html.PasswordFor(m => m.Password, new {@class = "form-control", id = "txtSenha", placeholder = "Senha..."})
                                        </div>
                                        @Html.ValidationMessageFor(m => m.Password, "", new {@class = "text-danger"})

                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="checkbox-inline">
                                            @Html.CheckBoxFor(m => m.RememberMe) Lembrar acesso nesta maquina ?
                                        </div>
                                    </div>
                                </div>
                                <br/>
                            </fieldset>
                        }
                    </section>
                </div>
                <div class="panel-footer">

                <div class="container-fluid">
                        <div class="row">
                            <div class="">
                                <input type="submit" value="Entrar" class="btn btn-primary btn-block" onclick="frmLogin.submit()">
                            </div>
                            <div class="" style="display: none">
                                @Html.ActionLink("Registrar", "Registrar", null, new { id = "lnkRegistrar", @class = "btn btn-primary btn-block" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/DashboardLayout/dist/js/sb-admin-2.js"></script>
</body>
</html>
